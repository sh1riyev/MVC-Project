@model IEnumerable<CategoryHomeVM>

<div class="container-xxl py-5 category">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Categories</h6>
            <h1 class="mb-5">Courses Categories</h1>
        </div>
        <div class="row g-3">
            @foreach (var category in Model)
            {
                <div class="@category.ColumnSizeClass">
                    <!-- Apply different column size classes based on category -->
                    <a class="position-relative d-block overflow-hidden" href="">
                        <img class="img-fluid" src="~/img/@category.Image" alt="@category.CategoryName">
                        <div class="bg-white text-center position-absolute bottom-0 end-0 py-2 px-3" style="margin: 1px;">
                            <h5 class="m-0">@category.CategoryName</h5>
                            <small class="text-primary">@category.CourseCount.ToString() Courses</small>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
