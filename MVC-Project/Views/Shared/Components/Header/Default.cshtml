@model HeaderVM


<nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
    <div class="container">
        <a href="index.html" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
            <h2 class="m-0 text-primary"><i class="@Model.Settings["Logo"]"></i>@Model.Settings["Navbar-Name"]</h2>
        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                <a href="index.html" class="nav-item nav-link active">Home</a>
                <a href="about.html" class="nav-item nav-link">About</a>
                <a href="courses.html" class="nav-item nav-link">Courses</a>
                <a href="contact.html" class="nav-item nav-link">Contact</a>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Account" asp-action="Register" class="nav-item nav-link">Register</a>
                }
                else
                {
                    <a  class="nav-item nav-link">@User.Identity.Name</a>

                }

            </div>
            <!-- Button trigger modal -->
            @if (!User.Identity.IsAuthenticated)
            {
                <a asp-controller="Account" asp-action="Login">Login</a>
            }
            else
            {
                <form method="post" asp-controller="Account" asp-action="Logout">
                    <button type="submit" class="nav-item nav-link">Logout</button>
                </form>
            }

            <!-- Modal -->
        </div>
    </div>
   
</nav>
