@model InformationEditVM

<div class="form-group row container">
    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <label class="col-sm-2 col-form-label">Blog</label>
        <div class="slider-image">
            <img src="~/img/@Model.CurrentImage" width="250px" height="200px" />
        </div>
        <div class="col-sm-10">
            <textarea asp-for="Name"
                      class="form-control "
                      rows="6"
                      placeholder="Title">
            </textarea>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-sm-10">
            <textarea asp-for="Description"
                      class="form-control"
                      rows="6"
                      placeholder="Description">
            </textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="col-sm-10">
            <input asp-for="NewImage"
                   class="form-control form-control-round"
                   placeholder="Title">
            <span asp-validation-for="NewImage" class="text-danger"></span>
        </div>
        <div class="buttons mt-5">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a asp-action="Index" class="btn btn-light">Cancel</a>
        </div>

    </form>
</div>

