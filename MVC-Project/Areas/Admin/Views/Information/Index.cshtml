@model IEnumerable<InformationVM>


<div class="card">
    <div class="card-header text-center">
        <h1>Information</h1>
    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <div class="create-operation">
                @if (User.IsInRole("SuperAdmin"))
                {
                    <a asp-action="Create" class="btn btn-success text-white btn-sm"><i class="ti-plus"></i></a>

                }
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Icon</th>
                        <th>Operation</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr class="category-data">
                            <td>@item.Title</td>
                            <td>@item.Description.ToString().Truncate(20)</td>
                            <td><img src="~/img/@item.Image" width="60px" height="60px" /></td>
                            <td>
                                <a asp-controller="Slider" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning text-white btn-sm"><i class="ti-settings"></i></a>
                                <form class="d-inline" method="post" asp-action="Delete" asp-route-id="@item.Id"><button type="submit" class="btn btn-danger text-white btn-sm"><i class="ti-trash"></i></button></form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

