@model IEnumerable<SettingVM>


<div class="card">
    <div class="card-header text-center">
        <h1>Settings</h1>
    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
             <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Value</th>
                        <th>Operation</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="category-data">
                            <td>@item.Key</td>
                            <td>@item.Value</td>
                            <td>
                              <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning text-white btn-sm"><i class="ti-settings"></i></a> </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

